<resources>
    <!-- Base application theme -->
    <style name="Theme.FoodPlanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="AuthEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="android:textColorHint">@color/primary_color</item>
    </style>

    <style name="AuthButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="FilterButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/purple_500</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarWeekDayText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallOrangeFilterButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">10.5sp</item>
        <item name="backgroundTint">#FFE0B2</item> <!-- Light orange background -->
        <item name="android:textColor">#FF5722</item> <!-- Darker orange text -->
        <item name="strokeColor">#FF5722</item> <!-- Border color -->
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="OrangeTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#FF5722</item>
        <item name="boxBackgroundColor">#FFF8E1</item>
        <item name="hintTextColor">#FF5722</item>
        <item name="android:textColorHint">#FF5722</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="OrangeButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FF5722</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OrangeOutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#FF5722</item>
        <item name="android:textColor">#FF5722</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>